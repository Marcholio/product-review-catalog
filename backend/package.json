{
  "name": "product-review-catalog-backend",
  "version": "1.0.0",
  "description": "Backend for the Product Review Catalog application",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "NODE_ENV=development tsx watch src/server.ts",
    "dev:seed": "NODE_ENV=development SEED_DATABASE=true tsx watch src/server.ts",
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "seed": "NODE_ENV=development SEED_DATABASE=true tsx src/db/seed.ts",
    "migrate": "NODE_ENV=development tsx src/db/runMigration.js",
    "make-admin": "tsx src/scripts/makeUserAdmin.ts",
    "add-admin-column": "tsx src/scripts/addIsAdminColumn.ts"
  },
  "dependencies": {
    "@types/compression": "^1.7.5",
    "@types/express-rate-limit": "^6.0.2",
    "@types/helmet": "^4.0.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "pg": "^8.11.3",
    "sequelize": "^6.37.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.3.3"
  }
}
